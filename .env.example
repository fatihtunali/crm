# Database - PostgreSQL
# Connection pooling parameters: connection_limit (max connections), pool_timeout (seconds)
# Recommended settings: connection_limit=10 for small/medium apps, 20+ for high traffic
# pool_timeout=20 ensures connections don't hang indefinitely
DATABASE_URL="postgresql://tourcrm:tourcrm123@localhost:5432/tour_crm?connection_limit=10&pool_timeout=20"

# Database Connection Pool Settings (for reference/documentation)
# These values are included in DATABASE_URL above
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_TIMEOUT=20

# API
NODE_ENV="development"
PORT=3001
API_PREFIX="api/v1"

# JWT - IMPORTANT: Use strong secrets (minimum 32 characters) in production
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
# Production example:
# CORS_ORIGIN="https://app.tourcrm.com,https://admin.tourcrm.com"

# Frontend
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"

# Redis Cache (optional - app works without Redis, falls back to in-memory cache)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_TTL=600

# File Upload
MAX_FILE_SIZE="10485760"
UPLOAD_DIR="./uploads"

# PDF Generation
PDF_STORAGE_PATH="./storage/invoices"

# Email (optional for MVP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# WhatsApp (optional stub)
WHATSAPP_API_KEY="your-whatsapp-api-key"
WHATSAPP_API_URL="https://api.whatsapp.com"

# Default Admin
SUPER_ADMIN_EMAIL="admin@tourcrm.com"
SUPER_ADMIN_PASSWORD="Admin123!"
