{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@tour-crm/shared$": "<rootDir>/../../../packages/shared/src"
  },
  "collectCoverageFrom": [
    "../src/**/*.{ts,js}",
    "!../src/main.ts",
    "!../src/**/*.module.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.dto.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1
}
